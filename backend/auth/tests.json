{
  "tests": [
    {
      "name": "Login with valid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "admin",
        "password": "admin123"
      },
      "expectedStatus": 200
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "admin",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Verify token without header",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}